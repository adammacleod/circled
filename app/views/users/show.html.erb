<h1><%= @user.username %></h1>

<h2>Posts</h2>

<%= render :partial => 'links/links', :locals => { :links => @user.links } %>

<h2>Comments</h2>

<%= render :partial => 'comments/comments', :locals => { :comments => @user.comments } %>

<% if @user.id == @current_user.id %>
  <%= link_to 'Edit', edit_user_path(@user) %>
<% end %>
