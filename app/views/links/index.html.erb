<h1>Listing links</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Link</th>
    <th>Slug</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.title %></td>
    <td><%= link.body %></td>
    <td><%= link.link %></td>
    <td><%= link.slug %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<% if @current_user %>
  <%= link_to 'New Link', new_link_path %>
<% end %>
