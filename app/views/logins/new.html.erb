<h1>Login</h1>

<%= form_tag(logins_path) do %>
  <div class="field">
    <%= label_tag(:username, "Username:") %>
    <%= text_field_tag(:username) %>
  </div>
  <div class="field">
    <%= label_tag(:password, "Password:") %>
    <%= password_field_tag(:password) %>
  </div>
  <div class="actions">
    <%= submit_tag("Log In") %>
  </div>
<% end %>
